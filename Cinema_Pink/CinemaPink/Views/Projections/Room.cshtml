@model IEnumerable<CinemaPink.Models.SeatDTO>
@{
    ViewData["Title"] = "Room";
}
<div class="gap"></div>
<div class="grid-container">


    @foreach (var seat in Model)
    {
        @if (seat.Reserved)
        {
            <div class="grid-reserved">@seat.ID</div>

        }
        else{ 

        <div class="grid-item">@seat.ID</div>
        }

    }
</div>

